mixin label(props, extraClasses)
    -
        var labelClasses = {
            "Label___xsmall": props.size === "xsmall",
            "Label___small": props.size === "small",
            "Label___medium": props.size === "medium",
            "Label___large": props.size === "large",
            "Label___wrap": props.wrap === true
        }
    |
    |
    span.Label(class=[labelClasses, extraClasses] title=(props.title ? props.text : false))= props.text
